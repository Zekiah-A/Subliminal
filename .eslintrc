{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended", 
		"plugin:jsdoc/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"jsdoc"
	],
	"rules": {
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"warn",
			"double"
		],
		"no-constant-condition": "off",
		"no-undef": "off",
		"no-process-exit": "off",
		"no-unused-vars": "off",
		"prefer-const": "warn",
		"no-const-assign": "error",
		"require-jsdoc": "off",
		"no-explicit-any": "off",
		"jsdoc/require-param-description": "off",
		"jsdoc/require-returns-description": "off",
		"jsdoc/require-property-description": "off"
	},
	"globals": {
		"Bun": true
	},
	"settings": {
		"import/resolver": {
		  "alias": {
				"map": [
					["./src"]
				],
				"extensions": [".js", ".ts", ".css", ".mp3", ".svg"]
			}
		}
	}    
}